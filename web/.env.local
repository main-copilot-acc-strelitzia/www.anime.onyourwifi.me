# Web Frontend Environment Configuration for Debian 13.x
# ============================================================================

# API Configuration (backend connection)
NEXT_PUBLIC_API_URL="http://localhost:4000/api"
NEXT_PUBLIC_API_TIMEOUT_MS=30000

# App Configuration
NEXT_PUBLIC_APP_NAME="AnimeStream"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_DESCRIPTION="Offline anime streaming platform for LAN"

# Features
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_SENTRY="false"
NEXT_PUBLIC_ENABLE_TELEMETRY="false"

# Deployment
NODE_ENV="development"
NEXT_PUBLIC_DEPLOYMENT_ENV="development"

# Security - CSP and headers (offline mode)
NEXT_PUBLIC_CSP_ENABLED="true"

# HLS Player Configuration
NEXT_PUBLIC_HLS_DEBUG="false"
NEXT_PUBLIC_HLS_ENABLE_PERFORMANCE_STATS="true"

# Player defaults
NEXT_PUBLIC_PLAYER_AUTOPLAY="false"
NEXT_PUBLIC_PLAYER_DEFAULT_QUALITY="auto"

# Theme
NEXT_PUBLIC_DEFAULT_THEME="dark"

# Offline/LAN specific
NEXT_PUBLIC_OFFLINE_MODE="true"
NEXT_PUBLIC_NO_EXTERNAL_RESOURCES="true"
