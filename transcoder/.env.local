# Transcoder Worker Environment Configuration for Debian 13.x
# ============================================================================

# Node environment
NODE_ENV="development"

# PostgreSQL Database (local Debian instance)
DATABASE_URL="postgresql://akaza:yourboiakaza@localhost:5432/animestream"

# Redis (local instance - no Docker)
REDIS_URL="redis://localhost:6379"

# Local Storage Configuration
STORAGE_PATH="/opt/strelitzia/storage"
TRANSCODER_WORK_DIR="/var/lib/transcoder/work"

# FFmpeg Configuration
FFMPEG_PATH="/usr/bin/ffmpeg"
FFPROBE_PATH="/usr/bin/ffprobe"

# Worker Configuration
WORKER_CONCURRENCY=2
WORKER_POLL_INTERVAL=5000
MAX_VIDEO_SIZE=5242880000

# ClamAV (optional malware scanning)
CLAMAV_ENABLED="false"
CLAMAV_SOCKET="/var/run/clamav/clamd.ctl"

# Logging
LOG_LEVEL="info"

# Transcoding Presets
TRANSCODE_PRESET="fast"
TRANSCODE_CRF=20
TRANSCODE_HLS_TIME=6
TRANSCODE_SEGMENT_DURATION=6

# Deployment Info
DEPLOYMENT_ENV="development"
DEPLOYMENT_NAME="AnimeStream Transcoder Debian"
