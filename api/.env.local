# API Environment Configuration for Debian 13.x (Offline LAN)
# ============================================================================

# Node environment
NODE_ENV="development"

# Server Configuration
PORT=4000
CORS_ORIGIN="http://localhost:3000"

# PostgreSQL Database (local Debian instance)
DATABASE_URL="postgresql://akaza:yourboiakaza@localhost:5432/animestream"
DATABASE_URL_DIRECT="postgresql://akaza:yourboiakaza@localhost:5432/animestream"
# Redis (local instance - no Docker)
REDIS_URL="redis://localhost:6379"

# Local Storage (replaces S3/MinIO)
STORAGE_PATH="/opt/strelitzia/storage"

# JWT Authentication
JWT_PRIVATE_KEY="yourboiakaza"
JWT_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="30d"

# Session/Cookie Configuration
SESSION_SECRET="yourboiakaza"

# Logging
LOG_LEVEL="info"

# Email (optional, for notifications)
# SMTP_HOST="localhost"
# SMTP_PORT="25"
# SMTP_FROM="noreply@animestream.local"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=10
ARGON2_TYPE="argon2id"

# Deployment Info
DEPLOYMENT_ENV="development"
DEPLOYMENT_NAME="AnimeStream Debian"
