# Database Connection (for Debian Trixie with local PostgreSQL)
DATABASE_URL="postgresql://akaza:yourboiakaza@localhost:5432/animestream"

# Authentication
JWT_SECRET="yourboiakaza"
JWT_EXPIRATION="24h"

# Server
NODE_ENV="development"
PORT=3001
API_URL="http://localhost:3001"
WEB_URL="http://localhost:3000"
CORS_ORIGIN="http://localhost:3000"

# Redis (local instance on Debian)
REDIS_URL="redis://localhost:6379"
REDIS_DB=0

# AWS S3 or MinIO (optional)
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="akaza"
S3_SECRET_KEY="yourboiakaza"
S3_BUCKET="animestream"

# Email (optional for Debian)
MAIL_HOST="localhost"
MAIL_PORT="587"
MAIL_USER="akaza"
MAIL_PASS="yourboiakaza"
MAIL_FROM="noreply@animestream.local"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES="video/mp4,video/webm,video/ogg"